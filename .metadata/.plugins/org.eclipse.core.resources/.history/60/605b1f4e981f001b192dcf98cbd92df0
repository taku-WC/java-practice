
public class Chapter08 {
	public static void main(String[] args) {
		int number1 = 1;
		while (number1 < 50) {
			number1 *= 2;
			System.out.println("While01 = " + number1);
		}
		
        int number2 = 1;
        while (number2 < 50) {
            number2 *= 2;
            System.out.println("While01 = " + number2);
        }
        
        int number3 = 1;
        do {
            numbe3r *= 2;
            System.out.println("DoWhile01 = " + number3);
        } while (number3 < 50);
	}
}
